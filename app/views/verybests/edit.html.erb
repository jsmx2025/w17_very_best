<!-- Validation failure messages -->
<% if @verybest.errors.any? %>
  <% @verybest.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Verybest #<%= @verybest.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_verybest/<%= @verybest.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      
      

      <!-- Label and input for foodvenue_id -->
      <div class="form-group">
        <label for="foodvenue_id" class="control-label">
          Foodvenue
        </label>

        <%= select_tag(:foodvenue_id, options_from_collection_for_select(Foodvenue.all, :id, :food_id, @verybest.foodvenue_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Verybest
      </button>
      or
      <a href="/verybests/<%= @verybest.id %>">Cancel</a>
    </form>
  </div>
</div>
